<mvc:View
	controllerName="br.com.idxtecVariedade.controller.Variedade"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:t="sap.ui.table">
	<App>
		<pages>
			<Page showHeader="false" class="sapUiContentPadding" enableScrolling="false">
				<content>
					<t:Table id="tableVariedade"
						selectionMode="Single"
						selectionBehavior="Row"
						class="sapUiSizeCondensed"
						visibleRowCountMode="Auto"
						enableBusyIndicator="true"
						alternateRowColors="true">
						<t:toolbar>
							<Toolbar>
								<Title text="Lista de Variedades"/>
								<ToolbarSpacer/>
								<SearchField placeholder="Pesquisar descrição..." width="30%" search="filtraVariedade"/>
							</Toolbar>
						</t:toolbar>
						<t:columns>
							<t:Column id="columnEmpresa" filtered="true" width="10%" >
								<Label text="Empresa" wrapping="true"/>
								<t:template>
									<Text text="{Empresa}" wrapping="false"/>
								</t:template>
							</t:Column>
							<t:Column id="columnDescricao" filterProperty="Descricao" sortProperty="Descricao">
								<Label text="Descrição"/>
								<t:template>
									<Text text="{Descricao}"/>
								</t:template>
							</t:Column>
						</t:columns>
					</t:Table>
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button id="incluir" text="Incluir novo" press="onIncluir" type="Emphasized"/>
						<Button id="editar" text="Editar" press="onEditar"/>
						<Button id="remover" text="Remover" press="onRemover"/>
						<ToolbarSeparator/>
						<Button icon="sap-icon://refresh" press="onRefresh"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>