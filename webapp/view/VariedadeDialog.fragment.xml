<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
   <Dialog
		id="VariedadeDialog"
		title="{view>/titulo}"
		class="sapUiSmallMargin sapUiSizeCompact">
   	
   		<VBox id="vBoxVariedade" class="sapUiSmallMargin">
			<Label text="Descrição:" labelFor="descricao"/>
			<Input value="{model>/Descricao}" id="descricao" required="true"/>
		</VBox>
   		
   		<buttons>
   			<Button text="Salvar" press="onSaveDialog"/>
   			<Button text="Fechar" press="onCloseDialog"/>
   		</buttons>
   </Dialog>
</core:FragmentDefinition>